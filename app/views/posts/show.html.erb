<div class="post pb-5">
  <h3><%= @post.title %></h3>
  <small>Posted by <%= @post.user.name %> on <%= @post.created_at %></small>
  <%= image_tag @post.image, class:'img-blog pb-5' %>
  <% if can? :update, @post %><%= link_to "Edit Post", edit_admin_post_path(@post) %><% end %>
  <div class="post-content">
    <p><%= sanitize @post.body %></p>
  </div>
</div>