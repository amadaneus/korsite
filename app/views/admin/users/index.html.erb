<div class="card">
  <div class="card-body">
    <h2 class="card-title">Manage Users <%= link_to "Add New", new_user_registration_path, class: 'btn btn-primary pull-right' %></h2>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Date Created</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_time.strftime('%b %e %Y at %l:%M %p') %></td>
          <td><%= link_to "Edit", edit_user_registration_path(user), class: 'btn btn-warning' %>
            <%= link_to "Delete", delete_user_registration_path(user), class: 'btn btn-danger',
                        method: :delete, data: {confirm: 'Are you sure?'}%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>