<%= form_with(model: @registration, url: create_registration_path) do |form| %>
  <%= notice %>
  <%= @registration.errors.full_messages.join(', ') %>

  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone, class: 'form-control', placeholder: 'Your Phone Number' %>
  </div>

  <div class="form-group">
    <%= form.email_field :email, class: 'form-control', placeholder: 'Your Email' %>
  </div>

  <div class="form-group">
    <%= form.radio_button :role, 'driver' %>
    <%= form.label :role, 'Driver' %>

    <%= form.radio_button :role, 'broker' %>
    <%= form.label :role, 'Broker' %>

    <%= form.radio_button :role, 'fleet owner' %>
    <%= form.label :role, 'Fleet Owner' %>

    <%= form.radio_button :role, 'other' %>
    <%= form.label :role, 'Other' %>
  </div>

  <div class="form-group">
    <span>
      <%= form.radio_button :income, '$30,000-$36,000' %>
      <%= form.label :income, '$30,000-$36,000' %>
    </span>

    <span>
      <%= form.radio_button :income, '$36,500-$42,000' %>
      <%= form.label :income, '$36,500-$42,000' %>
    </span>

    <span>
      <%= form.radio_button :income, '$42,500-$48,000' %>
      <%= form.label :income, '42,500-$48,000' %>
    </span>

    <span>
      <%= form.radio_button :income, '$48,500-54,000' %>
      <%= form.label :income, '$48,500-54,000' %>
    </span>
  </div>

  <div class="form-group">
    <span>
      <%= form.radio_button :status, 'employed' %>
      <%= form.label :income, 'Employed/W-2' %>
    </span>

    <span>
      <%= form.radio_button :status, 'contractor' %>
      <%= form.label :income, 'Contractor-LLC' %>
    </span>
  </div>

  <div class="form-group">
    <%= form.text_area :body, class: 'form-control', placeholder: 'Tell us about yourself and your needs' %>
  </div>

  <div class="actions">
    <%= form.submit "Send", class: 'btn btn-primary' %>
  </div>

<% end %>
