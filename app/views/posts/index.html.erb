<div class="post pb-5">
  <% if @posts.exists? %>
    <% @posts.each do |post| %>
      <h3><%= post.title %></h3>
      <small>Posted by <%= post.user_id %> on <%= post.created_at %></small>
      <%= image_tag post.image, class:'img-blog pb-5' %>
      <div class="post-content">
        <p><%= post.body %></p>
        <a href="#" class="btn btn-kor btn-block">Read More</a>
      </div>
    <% end %>
  <% else %>
    <p>There are no posts for this yet!</p>
  <% end %>
</div>