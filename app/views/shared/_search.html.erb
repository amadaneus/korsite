<% if params[:controller] == 'admin/posts' %>
  <%= form_tag(admin_posts_path, :method => "get", id:"search-form", class:"search-form form-group form-inline my-2 my-lg-0") do %>
    <div class="">
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: 'form-control mr-sm-2' %>
      <%= submit_tag "Search", :name => nil, class: 'btn btn-success my-2 my-sm-0' %>
    </div>
  <% end %>

<% elsif params[:controller] == 'admin/categories' %>
      <%= form_tag(admin_posts_path, :method => "get", id:"search-form", class:"search-form form-group form-inline my-2 my-lg-0") do %>
