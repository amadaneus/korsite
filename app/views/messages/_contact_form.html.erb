<div class="section mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @message, url: create_message_path) do |form| %>
        <%= notice %>
        <%= @message.errors.full_messages.join(', ') %>

        <div class="form-group">
          <%= form.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
        </div>

        <div class="form-group">
          <%= form.email_field :email, class: 'form-control', placeholder: 'Your Email' %>
        </div>

        <div class="form-group">
          <%= form.text_area :body, class: 'form-control', placeholder: 'Type Your Message to Us here' %>
        </div>

        <div class="actions">
          <%= form.submit "Send", class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
  </div>
</div>